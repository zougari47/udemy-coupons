---
import { Languages, LayoutDashboard, MonitorPlay } from '@lucide/astro';
import Card from '@/components/ui/card/index.astro';
import CardHeader from '@/components/ui/card/header.astro';
import CardTitle from '@/components/ui/card/title.astro';
import CardDescription from '@/components/ui/card/description.astro';
import CardContent from '@/components/ui/card/content.astro';
import type { Course } from '@/types';

interface Props {
  course: Course;
}

const { course } = Astro.props;
---

<a class='' href={`/courses/${course.slug}`}>
  <Card class='flex h-full flex-col justify-between overflow-hidden pt-0'>
    <img
      class='block h-auto w-full'
      src={course.image}
      width='750'
      height='422'
      alt={course.name}
    />
    <CardHeader>
      <CardTitle>{course.name}</CardTitle>
      <CardDescription>{course.subcategory}</CardDescription>
    </CardHeader>
    <CardContent>
      <table class='w-full'>
        <tbody>
          <!-- language -->
          <tr title='language'>
            <td class='w-1/5 py-2'>
              <Languages />
            </td>
            <td>{course.language}</td>
          </tr>
          <!-- category -->
          <tr title='category'>
            <td class='py-2'>
              <LayoutDashboard />
            </td>
            <td>{course.category}</td>
          </tr>
          <!-- duration -->
          <tr title='duration'>
            <td class='py-2'>
              <MonitorPlay />
            </td>
            <td>
              {course.lectures}
              {course.lectures === 1 ? 'Hour' : 'Hours'}
            </td>
          </tr>
        </tbody>
      </table>
    </CardContent>
  </Card>
</a>
