---
import { buttonVariants } from './variants.ts';
import type { VariantProps } from 'class-variance-authority';
import { cn } from '@/lib/utils';

interface ButtonProps extends AstroProps, VariantProps<typeof buttonVariants> {}
const {
  class: className,
  variant,
  size,
  ...props
} = Astro.props as ButtonProps;
---

<button
  data-slot='button'
  class={cn(buttonVariants({ variant, size, className }), 'cursor-pointer')}
  {...props}>
  <slot />
</button>
